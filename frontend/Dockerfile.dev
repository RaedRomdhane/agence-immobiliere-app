FROM node:20-alpine

# Métadonnées
LABEL maintainer="dev-team@agence-immobiliere.com"
LABEL description="Frontend Next.js - Development Environment"

# Installer les outils de développement
RUN apk add --no-cache \
    git \
    python3 \
    make \
    g++ \
    curl

# Créer un utilisateur non-root pour la sécurité
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

# Créer le répertoire de l'application
WORKDIR /app

# Copier TOUS les fichiers d'abord
COPY . .

# Installer les dépendances (avec devDependencies pour le développement)
# --legacy-peer-deps nécessaire pour React 19 avec @hello-pangea/dnd
RUN npm install --legacy-peer-deps && \
    npm cache clean --force

# Changer le propriétaire de TOUS les fichiers (y compris .next)
RUN chown -R nodejs:nodejs /app

# Passer à l'utilisateur non-root
USER nodejs

# Exposer le port Next.js
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:3000/ || exit 1

# Commande de démarrage en mode développement
CMD ["npm", "run", "dev"]
