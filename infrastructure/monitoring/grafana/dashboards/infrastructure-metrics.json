{
  "title": "Infrastructure Metrics",
  "uid": "infra-metrics",
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "1m",
  "tags": ["infrastructure", "kubernetes"],
  "panels": [
      {
        "id": 1,
        "title": "Container CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total[5m])) by (container_name) * 100",
            "legendFormat": "{{ container_name }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Container Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes) by (container_name) / 1024 / 1024",
            "legendFormat": "{{ container_name }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "mbytes"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Disk Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "(1 - node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "thresholds": [
            {"value": 0, "color": "green"},
            {"value": 80, "color": "yellow"},
            {"value": 90, "color": "red"}
          ]
        }
      },
      {
        "id": 4,
        "title": "Network I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total[5m])) by (container_name)",
            "legendFormat": "{{ container_name }} RX",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total[5m])) by (container_name)",
            "legendFormat": "{{ container_name }} TX",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "Bps"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Pod Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Running\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 6,
        "title": "Failed Pods",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 8, "y": 16},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Failed\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name",
          "thresholds": [
            {"value": 0, "color": "green"},
            {"value": 1, "color": "red"}
          ]
        }
      },
      {
        "id": 7,
        "title": "Pending Pods",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 16},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Pending\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        }
      }
    ]
  }
